{
    "name": "uma/psr7-hmac",
    "description": "An HMAC authentication library built on top of the PSR-7 specification",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Hernandez",
            "email": "e6990620@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "ext-hash": "*",
        "ext-pcre": "*",

        "psr/http-message": "1.0",
        "symfony/polyfill-php56": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",

        "asika/http": "^1.0",
        "guzzlehttp/psr7": "^1.3",
        "phyrexia/http": "^2.4",
        "ringcentral/psr7": "^1.2",
        "slim/slim": "^3.4",
        "wandu/http": "^1.6",
        "zendframework/zend-diactoros": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "UMA\\Psr\\Http\\Message\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\Psr\\Http\\Message\\": "tests/"
        }
    }
}
