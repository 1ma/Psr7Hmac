{
    "name": "uma/psr7-hmac",
    "description": "An HMAC authentication library built on top of the PSR-7 specification",
    "type": "library",
    "license": "MIT",
    "keywords": ["http", "psr7", "hmac"],
    "homepage": "https://github.com/1ma/Psr7Hmac",
    "support": {
        "issues": "https://github.com/1ma/Psr7Hmac/issues",
        "source": "https://github.com/1ma/Psr7Hmac"
    },
    "require": {
        "php": ">=5.6.0",
        "ext-hash": "*",
        "ext-pcre": "*",

        "paragonie/random_compat": "^2.0",
        "psr/http-message": "^1.0.0",
        "symfony/polyfill-php56": "^1.2"
    },
    "require-dev": {
        "guzzlehttp/psr7": "^1.3",
        "kambo/httpmessage": "^0.9.0",
        "mibadger/http": "^1.0",
        "ringcentral/psr7": "^1.2",
        "slim/slim": "^3.4",
        "symfony/psr-http-message-bridge": "^0.2.0",
        "wandu/http": "^1.6",
        "windwalker/http": "^3.1",
        "zendframework/zend-diactoros": "^1.3"
    },
    "suggest": {
        "guzzlehttp/psr7": "most widely used PSR-7 implementation",
        "slim/slim": "second most widely used PSR-7 implementation",
        "zendframework/zend-diactoros": "third most widely used PSR-7 implementation"
    },
    "autoload": {
        "psr-4": {
            "UMA\\Psr7Hmac\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UMA\\Tests\\Psr7Hmac\\": "tests/"
        }
    }
}
